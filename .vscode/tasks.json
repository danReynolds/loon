{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Core tests",
      "type": "shell",
      "command": "flutter",
      "args": ["test", "test/core"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "Native tests",
      "type": "shell",
      "command": "flutter",
      "args": ["test", "test/native"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "Web tests",
      "type": "shell",
      "command": "flutter",
      "args": [
        "test",
        "test/web",
        "--platform",
        "chrome"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    }
  ]
}
